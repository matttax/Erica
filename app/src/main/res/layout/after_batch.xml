<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/blue"
    app:strokeWidth="3dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/notification_form"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="70dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/studyResults"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_bold"
                android:layout_weight="5"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/remainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Remaining: 0"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_bold"
                android:layout_weight="1"
                />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answered"
            />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/blue"
        android:text="@string/moveNext"
        android:id="@+id/toNextBatch"
        android:layout_gravity="center|bottom"
        android:fontFamily="@font/organo"
        android:textSize="15sp"
        />


</com.google.android.material.card.MaterialCardView>