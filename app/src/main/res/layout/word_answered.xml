<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/notification_main_column_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/blue"
    app:strokeWidth="3dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/notification_form"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="@string/correct"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/green"
            android:gravity="center"
            android:id="@+id/answeredHeader"
            android:fontFamily="@font/nunito_bold"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Word"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black_shade_1"
            android:id="@+id/answeredCorrectWord"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/nunito_regular"
            />
        <FrameLayout
            android:id="@+id/hintContainer"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hint"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_gravity="center"
                />
            <ProgressBar
                android:id="@+id/hintProgressBar"
                style="@style/notificationSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/blue"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/hintErrorText"
                style="@style/dialogText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hint found"
                android:gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="@string/undoIncorrectAnswer"
                android:textStyle="bold"
                android:layout_weight="3"
                android:textColor="@color/green"
                android:id="@+id/notIncorrect"
                android:fontFamily="@font/nunito_regular"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="70dp"
                />
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="@string/moveNext"
                android:id="@+id/answerNext"
                android:layout_marginEnd="30dp"
                android:textSize="15sp"
                android:fontFamily="@font/organo"
                />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
