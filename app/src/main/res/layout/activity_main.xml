<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    style="@style/AppTheme.MaterialTheme"
    android:backgroundTint="@color/light_grey"
    tools:context=".activities.MainActivity">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="58dp"
                android:layout_height="51dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_play_arrow_24" />
            <Spinner
                android:id="@+id/setsSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/teal_700_transparent"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="To sets"
                android:id="@+id/toset"
                android:backgroundTint="@color/teal_700_transparent"
                android:layout_weight="1"
                android:textColor="@color/black_shade_1"
                android:fontFamily="@font/nunito_bold"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Term"
        android:padding="5dp"
        android:textColorHint="@color/black_shade_1"
        app:hintTextColor="@color/black_shade_1"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editSource"
            android:ems="10"
            android:importantForAutofill="no"
            android:textColor="@color/black_shade_1"
            android:textColorHint="@color/black_shade_1"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:fontFamily="@font/nunito_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Definition"
        android:padding="5dp"
        android:textColorHint="@color/black_shade_1"
        app:hintTextColor="@color/black_shade_1"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:importantForAutofill="no"
            android:textColor="@color/black_shade_1"
            android:textColorHint="@color/black_shade_1"
            android:textSize="14sp"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:id="@+id/defText"
            android:fontFamily="@font/nunito_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/crimson"
            android:layout_weight="1"
            android:id="@+id/dismissWord"
            android:fontFamily="@font/organo"
            android:textSize="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translate"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/blue"
            android:layout_weight="1"
            android:id="@+id/addWord"
            android:fontFamily="@font/organo"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/blue"
            app:tabBackground="@drawable/tab_style"
            app:tabTextAppearance="@style/RoundedTabLayoutStyle"
            >
            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Translations"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Definitions"
                />
            <com.google.android.material.tabs.TabItem
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Examples"
                />
        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>
</LinearLayout>