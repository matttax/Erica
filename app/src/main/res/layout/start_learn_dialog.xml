<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/blue"
    app:strokeWidth="3dp"
    app:cardCornerRadius="20dp"
    android:background="@drawable/notification_form"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_grey">

    <androidx.cardview.widget.CardView
        style="@style/upperButton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parametersHeader"
                android:textSize="25sp"
                android:fontFamily="@font/nunito_bold"
                android:textStyle="bold"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/select_num_of_words"
            style="@style/paramLayout"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                style="@style/paramText"
                android:text="@string/numberOfWordsToLearn"
                android:layout_weight="5"
                />
            <TextView
                android:id="@+id/number_of_words_text"
                style="@style/paramField"
                android:text="0"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_words_in_batch"
            style="@style/paramLayout"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                style="@style/paramText"
                android:text="@string/numberOfWordsInBatch"
                android:layout_weight="5"
                />
            <TextView
                android:id="@+id/words_in_batch_text"
                style="@style/paramField"
                android:text="0"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/paramLayout">
            <TextView
                style="@style/paramText"
                android:text="@string/askMode"
                android:layout_weight="2"
                />
            <Spinner
                android:id="@+id/termDef"
                style="@style/paramSpinner"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/paramLayout">
            <TextView
                style="@style/paramText"
                android:text="@string/wordsSorting"
                android:layout_weight="2"
                />
            <Spinner
                android:id="@+id/priority"
                style="@style/paramSpinner"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/noStartLearn"
                style="@style/dialogButton"
                android:text="@string/cancel"
                android:backgroundTint="@color/crimson"
                android:textSize="20sp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/yesStartLearn"
                style="@style/dialogButton"
                android:text="@string/start"
                android:backgroundTint="@color/green"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
